{
	"name": "mojom-lsp-vscode",
	"author": "The Chromium Authors",
	"license": "Apache-2.0",
	"version": "0.1.0",
	"categories": [],
	"engines": {
		"vscode": "^1.23.0"
	},
	"activationEvents": [
		"onLanguage:mojom"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "mojom",
				"aliases": [
					"Mojom",
					"mojom"
				],
				"extensions": [
					".mojom"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "mojom",
				"scopeName": "source.mojom",
				"path": "./syntaxes/mojom.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd .."
	},
	"devDependencies": {
		"@types/node": "^8.0.0",
		"tslint": "^5.11.0",
		"typescript": "^3.1.3"
	}
}
