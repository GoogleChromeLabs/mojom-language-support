{
  "name": "vscode-mojom-idl",
  "author": "The Chromium Authors",
  "displayName": "Mojom IDL",
  "description": "Syntax highlighting for mojom",
  "license": "Apache-2.0",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/GoogleChromeLabs/mojom-language-support.git"
  },
  "categories": [
    "Programming Languages"
  ],
  "engines": {
    "vscode": "^1.34.0"
  },
  "activationEvents": [
    "onLanguage:mojom"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "mojom",
        "extensions": [
          ".mojom"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mojom",
        "scopeName": "source.mojom",
        "path": "./syntaxes/mojom.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd .."
  },
  "devDependencies": {
    "@types/node": "^13.11.1",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3"
  }
}
