{
  "name": "vscode-mojom",
  "author": "The Chromium Authors",
  "displayName": "Mojom IDL",
  "description": "Syntax highlighting for Mojom",
  "license": "Apache-2.0",
  "version": "0.1.2",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "Chromium",
    "Mojom"
  ],
  "publisher": "Google",
  "repository": {
    "type": "git",
    "url": "https://github.com/GoogleChromeLabs/mojom-language-support/vscode-mojom"
  },
  "engines": {
    "vscode": "^1.34.0"
  },
  "activationEvents": [
    "onLanguage:mojom"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "mojom",
        "extensions": [
          ".mojom"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mojom",
        "scopeName": "source.mojom",
        "path": "./syntaxes/mojom.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Mojom",
      "properties": {
        "mojom.enableLanguageServer": {
          "type": "string",
          "default": "Enabled",
          "enum": ["Enabled", "Disabled", "Never"],
          "description": "Enable Mojom Language Server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd .."
  },
  "devDependencies": {
    "@types/node": "^16.11.1",
    "eslint": "^8.0.1",
    "typescript": "^4.4.4"
  }
}
